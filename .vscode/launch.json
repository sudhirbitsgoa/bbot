  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Bot",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "BOT_LOG_LEVEL": "info",
        "ROCKETCHAT_URL":"http://0.0.0.0:3000",
        "ROCKETCHAT_AUTH":"password",
        "ROCKETCHAT_USER":"bbot",
        "ROCKETCHAT_PASSWORD":"password",
        "LISTEN_ON_ALL_PUBLIC":"true",
        "ROCKETCHAT_ROOM":"",
		"RESPOND_TO_DM":"true",
		"BOT_STORAGE_ADAPTER": "mongo",
		"BOT_MESSAGE_ADAPTER": "rocketchat"
      },
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/index.js",
      "protocol": "inspector",
      "stopOnEntry": false
    }
  ]
}